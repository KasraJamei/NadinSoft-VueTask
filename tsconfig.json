{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "types": [
            "cypress",
            "node"
        ],
        "lib": [
            "ES2020",
            "DOM"
        ]
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "src/**/*.vue",
        "src/**/*.json",
        "cypress/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}